{
  "compilerOptions": {
    /* ==== Paths ==== */
    "rootDir": ".",
    "outDir": "./dist",

    /* ==== Target environment ==== */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "types": ["node", "jest"],

    /* ==== Type safety ==== */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* ==== Source maps & declarations ==== */
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,

    /* ==== Module interoperability ==== */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "__tests__/**/*.ts",
    "jest.config.ts",
    "jest.setup.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
